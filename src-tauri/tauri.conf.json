{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Git Helper",
  "version": "0.1.0",
  "identifier": "com.githelper.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Git Helper",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Git Helper Team",
    "copyright": "Copyright © 2024 Git Helper Team. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Git 助手 - 专业的 Git 管理工具",
    "longDescription": "Git Helper 是一款专业的 Git 版本控制管理工具，提供直观的界面和强大的功能，帮助开发者更高效地管理代码版本。",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "perMachine",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      }
    }
  }
}
